/* Pre-Functions */
@font-face{
	font-family: Anonymous Pro, src('fonts/AnonymousPro-Regular.ttf');
}
html{
	overflow: hidden;
}
body{
	position: fixed;
	width: 1920px;
	height: 1080px;
	background-repeat: no-repeat;
	background-size: cover;
}
.intro_body_tab div:target {
	display: block;
}
/* Intro */
#intro_body_main{
	opacity:1;
    position:fixed;
    width:100%;
    height:100%;
    top:0px;
    left:0px;
    z-index:1000;
	background-image: url("image/personal_background.png");
}
#main_body_main{
	opacity:1;
    position:fixed;
    width:1941px;
    height:1080px;
    top:0px;
    left:0px;
    z-index:1000;
	background-image: url("image/personal_background2.png");
	display: none;
	animation: fadeOutBG 2s linear 0s 1 normal forwards, removeContent 2s linear 0s 1 normal forwards;
}
#main_body_true{
	opacity:1;
    position:fixed;
    width:1941px;
    height:1080px;
    top:0px;
    left:0px;
    z-index:1000;
	background-image: url("image/personal_background3.png");
	display: none;
	animation: fadeInBG 2s linear 0s 1 normal forwards, addContent 2s linear 0s 1 normal forwards;
}
/* Intro Link */
#intro_body_link{
	position: relative;
    top: 47.5%;
	left: 47%;
    width: 24em;
    margin: 0 auto;
    border-right: 2px solid rgba(255,255,255,.75);
    font-size: 180%;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    transform: translateY(-50%);
	font-family: 'Anonymous Pro', monospace;
	color: white;
	animation: blinkTextCursor 1000ms steps(44) infinite normal;
}
#intro_body_link:active{
	text-decoration: none;
}
#intro_body_link:hover{
	text-decoration: none;
}
#intro_body_link:link{
	text-decoration: none;
}'
#intro_body_link:visited{
