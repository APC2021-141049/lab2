/*Design*/
.tab div {
	display: none;
}
.tab div:target {
	display: block;
}
#header_name{
	display: block;
	font-size: 42px;
	font-family:'Trebuchet MS',sans-serif;
	background-color: black;
	color: white;
}
#header_profile_name{
	display: block;
